{
    "id": "incentive_detail",
    "label": "Incentive Detail",
    "description": "The name of the incentive detail where the account is held, used for identifying the financial institution associated with the transaction or account.",
    "fields": [
        {
            "label": "ID",
            "reference": "id",
            "type": "number",
            "column_width": 5,
            "required": true,
            "auto_generated": true
        },
        {
            "label": "Period",
            "reference": "period",
            "type": "text",
            "column_width": 4,
            "required": true,
            "pattern": "^[a-zA-Z0-9 ]{3,}$",
            "min_length": 3,
            "max_length": 8,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Code",
            "reference": "code",
            "type": "text",
            "column_width": 4,
            "required": true,
            "pattern": "^[a-zA-Z0-9 ]{3,}$",
            "min_length": 3,
            "max_length": 20,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Category",
            "reference": "category",
            "type": "text",
            "column_width": 6,
            "required": true,
            "pattern": "^[a-zA-Z0-9 ]{3,}$",
            "min_length": 3,
            "max_length": 100,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Category Sub",
            "reference": "category_sub",
            "type": "text",
            "column_width": 6,
            "required": true,
            "pattern": "^[a-zA-Z0-9 ]{3,}$",
            "min_length": 3,
            "max_length": 200,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Category Sub Detail",
            "reference": "category_sub_detail",
            "type": "text",
            "column_width": 6,
            "required": true,
            "pattern": "^[a-zA-Z0-9 ]{3,}$",
            "min_length": 3,
            "max_length": 200,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Value",
            "reference": "value",
            "type": "number",
            "column_width": 3,
            "required": true,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Unit Value",
            "reference": "unit_value",
            "type": "text",
            "column_width": 3,
            "required": true,
            "pattern": "^[a-zA-Z0-9 ]{1,}$",
            "min_length": 1,
            "max_length": 20,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Created At",
            "reference": "created_at",
            "type": "datetime(yyyy-MM-dd HH:mm:ss)",
            "column_width": 9,
            "allow_create": true,
            "allow_update": true
        }
    ],
    "layout": {
        "update": {
            "Group A" : {
                "id": 1,
                "period,code,value,unit_value,created_at": 2
            },
            "Category": {
                "category,category_sub,category_sub_detail": 2
            }
        }
    },
    "exports": [
        {
            "name": "Incentive Base Target Product",
            "type": "pdf",
            "backend": "{backend_host}/incentive_details?sort=id&ascending=true",
            "fields": ["value","category_sub_detail"]
        },
        {
            "name": "Incentive Base Target Product",
            "type": "xlsx",
            "backend": "{backend_host}/incentive_details?sort=id&ascending=true",
            "fields": [
                "value",
                "category_sub_detail"
            ]
        }
    ],
    "views": [
        {
            "label": "Incentive Base Target Product",
            "entity": "incentive_base_target_product",
            "filter": {
                "period": "period",
                "code": "code"
            }
        },
        {
            "label": "Incentive Base Target Category Product",
            "entity": "incentive_base_target_category_product",
            "filter": {
                "period": "period",
                "code": "code"
            }
        },
        {
            "label": "Incentive Base Subordinate Structure",
            "entity": "incentive_base_subordinate_structure",
            "filter": {
                "period": "period",
                "code": "code"
            }
        }
    ],
    "backend": {
        "read_all": {
            "method": "GET",
            "url": "{backend_host}/incentive_details?sort=id&ascending=true"
        },
        "read": {
            "method": "GET",
            "url": "{backend_host}/incentive_details/{id}"
        }
    }
}