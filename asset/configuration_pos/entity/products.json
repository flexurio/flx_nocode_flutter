{
  "id": "products",
  "label": "Product",
  "description": "Contains product information such as name, price, and stock quantity.",
  "fields": [
    {
      "label": "ID",
      "reference": "id",
      "type": "number",
      "auto_generated": true
    },
    {
      "label": "Gorengan",
      "reference": "name",
      "type": "text",
      "required": true,
      "allow_create": true,
      "allow_update": true,
      "pattern": "^[a-zA-Z0-9 ]{1,}$",
      "pattern_error": "Only letters, numbers, and spaces are allowed."
    },
    {
      "label": "Kategory",
      "reference": "category",
      "type": "text",
      "required": true,
      "allow_create": true,
      "allow_update": true,
      "pattern": "^[a-zA-Z0-9 ]{1,}$",
      "pattern_error": "Only letters, numbers, and spaces are allowed."
    },
    {
      "label": "Price",
      "reference": "price",
      "type": "number(2)",
      "required": true,
      "allow_create": true,
      "allow_update": true,
      "pattern": "^[0-9]+$",
      "pattern_error": "Only numeric values are allowed."
    }
  ],
  "backend": {
    "read_all": {
      "method": "GET",
      "url": "{backend_host}/products"
    },
    "read": {
      "method": "GET",
      "url": "{backend_host}/products/{id}"
    },
    "create": {
      "method": "POST",
      "url": "{backend_host}/products"
    },
    "update": {
      "method": "PUT",
      "url": "{backend_host}/products/{id}"
    },
    "delete": {
      "method": "DELETE",
      "url": "{backend_host}/products/{id}"
    }
  },
  "layout_list_tile": {
    "title": "name",
    "subtitle": "price",
    "trailing": "id"
  },
  "layout_form": {
    "create": {
      "Informasi": {
        "name,price,category": 2
      }
    },
    "update": {
      "Product Info": {
        "id,name,price": 3
      }
    }
  },
  "layout_table": {
    "id": 5,
    "name": 4,
    "category": 2,
    "price": 1
  },
  "exports": [
    {
      "name": "Products",
      "type": "xlsx",
      "backend": "{backend_host}/products",
      "fields": [
        "id",
        "name",
        "price"
      ]
    },
    {
      "name": "Products",
      "type": "pdf",
      "backend": "{backend_host}/products",
      "fields": [
        "price",
        "name"
      ]
    }
  ]
}