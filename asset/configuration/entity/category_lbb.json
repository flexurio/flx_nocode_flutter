{
    "id": "category_lbb",
    "label": "Category LBB",
    "description": "Commonly used LBB submission master categories",
    "fields": [
        {
            "label": "ID",
            "reference": "id",
            "type": "number",
            "column_width": 3
        },
        {
            "label": "Name",
            "reference": "name",
            "type": "text",
            "column_width": 3,
            "required": true,
            "max_length": 200,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Type",
            "reference": "type",
            "type": "text",
            "column_width": 6,
            "required": true,
            "max_length": 200,
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Created At",
            "reference": "created_at",
            "type": "text",
            "column_width": 9,
            "auto_generated": true
        }
    ],
    "backend": {
        "read_all": {
            "method": "GET",
            "url": "{backend_host}/lbb_categories?sort=id&ascending=false"
        },
        "read": {
            "method": "GET",
            "url": "{backend_host}/lbb_categories/{id}"
        },
        "create": {
            "method": "POST",
            "url": "{backend_host}/lbb_categories"
        },
        "update": {
            "method": "PUT",
            "url": "{backend_host}/lbb_categories/{id}"
        },
        "delete": {
            "method": "DELETE",
            "url": "{backend_host}/lbb_categories/{id}"
        }
    }
}