{
    "id": "sales_items",
    "label": "Sales Item",
    "description": "Details each item in a sale, including the associated product, quantity, price, and subtotal.",
    "fields": [
        {
            "label": "ID",
            "reference": "id",
            "type": "number",
            "column_width": 3,
            "auto_generated": true
        },
        {
            "label": "Sales ID",
            "reference": "sales_id",
            "type": "number",
            "column_width": 3,
            "required": true,
            "options_source": "backend.sales({id}:{id})",
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Product",
            "reference": "product_id",
            "type": "number",
            "column_width": 4,
            "required": true,
            "options_source": "backend.products({id}:{name})",
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Quantity",
            "reference": "qty",
            "type": "number",
            "column_width": 3,
            "required": true,
            "pattern": "^[0-9]+$",
            "pattern_error": "Only numeric values are allowed.",
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Price",
            "reference": "price",
            "type": "number",
            "column_width": 3,
            "required": true,
            "pattern": "^[0-9]+$",
            "pattern_error": "Only numeric values are allowed.",
            "allow_create": true,
            "allow_update": true
        },
        {
            "label": "Subtotal",
            "reference": "sub_total_amount",
            "type": "number",
            "column_width": 4,
            "auto_generated": true,
            "description": "Calculated as qty Ã— price"
        }
    ],
    "backend": {
        "read_all": {
            "method": "GET",
            "url": "{backend_host}/sales_items"
        },
        "read": {
            "method": "GET",
            "url": "{backend_host}/sales_items/{id}"
        },
        "create": {
            "method": "POST",
            "url": "{backend_host}/sales_items"
        },
        "update": {
            "method": "PUT",
            "url": "{backend_host}/sales_items/{id}"
        },
        "delete": {
            "method": "DELETE",
            "url": "{backend_host}/sales_items/{id}"
        }
    },
    "layout_list_tile": {
        "title": "product_id",
        "subtitle": "qty",
        "trailing": "sub_total_amount"
    },
    "layout": {
        "create": {
            "Item Info": {
                "sales_id,product_id,qty,price": 2
            }
        },
        "update": {
            "Item Info": {
                "id": 1,
                "sales_id,product_id,qty,price": 2
            }
        }
    }
}