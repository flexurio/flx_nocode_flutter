{
    "id": "customers",
    "label": "Customer",
    "description": "Contains customer information such as name, phone number, and email address.",
    "fields": [
        {
            "label": "ID",
            "reference": "id",
            "type": "number",
            "column_width": 5,
            "auto_generated": true
        },
        {
            "label": "Name",
            "reference": "name",
            "type": "text",
            "column_width": 4,
            "required": true,
            "allow_create": true,
            "allow_update": true,
            "pattern": "^[a-zA-Z0-9 ]{1,}$",
            "pattern_error": "Only letters, numbers, and spaces are allowed."
        },
        {
            "label": "Phone",
            "reference": "phone",
            "type": "text",
            "column_width": 4,
            "allow_create": true,
            "allow_update": true,
            "pattern": "^(\\+62|0)[2-9][0-9]{7,12}$",
            "pattern_error": "Must be a valid Indonesian phone number starting with +62 or 0, followed by 8 to 13 digits.",
            "description": "Example: +6281234567890 or 081234567890"
        },
        {
            "label": "Email",
            "reference": "email",
            "type": "email",
            "column_width": 4,
            "allow_create": true,
            "allow_update": true,
            "pattern": "^[\\w.-]+@[\\w.-]+\\.[a-zA-Z]{2,}$",
            "pattern_error": "Must be a valid email address (e.g. name@example.com)."
        }
    ],
    "backend": {
        "read_all": {
            "method": "GET",
            "url": "{backend_host}/customers"
        },
        "read": {
            "method": "GET",
            "url": "{backend_host}/customers/{id}"
        },
        "create": {
            "method": "POST",
            "url": "{backend_host}/customers"
        },
        "update": {
            "method": "PUT",
            "url": "{backend_host}/customers/{id}"
        },
        "delete": {
            "method": "DELETE",
            "url": "{backend_host}/customers/{id}"
        }
    },
    "layout_list_tile": {
        "title": "name",
        "subtitle": "email",
        "trailing": "phone"
    },
    "layout": {
        "create": {
            "Customer Info": {
                "name,phone,email": 1
            }
        },
        "update": {
            "Customer Info": {
                "id": 1,
                "name,phone,email": 1
            }
        }
    }
}